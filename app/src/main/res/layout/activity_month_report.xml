<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:id="@+id/drawlay_month">

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.mohit.time.MonthReport">

    <include layout="@layout/app_bar"
        android:id="@+id/app_bar_month"

        />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="10dp"
        android:ems="10"
        android:id="@+id/month_report_id" />

    <DatePicker
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker2"
        android:layout_below="@+id/day_spinner"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/month_report_button"
        android:textColor="@color/primary"
        android:background="@drawable/custom_button"
        android:id="@+id/month_button"
        android:layout_below="@id/datePicker2"
        android:layout_alignParentStart="true" />


</LinearLayout>

    <android.support.design.widget.NavigationView
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:id="@+id/draw_month"
        app:menu="@menu/drawmenu"
        app:headerLayout="@layout/header">


    </android.support.design.widget.NavigationView>

</android.support.v4.widget.DrawerLayout>
